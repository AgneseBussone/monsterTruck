<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/speed_progress_radius"/>
            <solid android:color="@color/light_blue"/>
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="@dimen/speed_progress_radius" />
                <gradient
                    android:angle="180"
                    android:endColor="@color/speed_end"
                    android:startColor="@color/speed_start" />
            </shape>
        </clip>
    </item>

</layer-list>